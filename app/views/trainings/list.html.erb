
<%=tabs(:tab1=>:training_system.l("Тренинговая система"))%>

<div id="content_right">
    <%=items_list(@trainings, :attr_name =>"title", :order => "created_at DESC")%>
</div>

<div id="content_main">
  <% @trainings=@trainings[0..6] %>
  <%for item in @trainings%>
  <div style="background: #e9ebee;"><%=link_to item.title, lang_training_path(lang_id(@lang),item), :class => "link_title strong", :style => "text-decoration:none"%></div>
  <%=simple_format(item.short_text)%>
  <br>
  <%end%>


</div>



  <%content_for(:admin_actions) do%>
     <%= link_to 'Редактировать', lang_trainings_path(lang_id(@lang)) %>
  <%end%>
