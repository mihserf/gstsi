
<%=tabs(:tab1=>"Список статей")%>

<%@locales=Localedb.find(:all)%>




<table class="admin_table">
  
<% for article in @articles %>
  <tr>
    <td><%= link_to article.title, lang_magazine_article_path(lang_id(@lang),@magazine,article) %></td>
    <td>
        <%@locales.each do |loc|%>
            <%=loc.short%><%= link_to image_tag("/images/edit_ico.gif",:alt=>"Редактировать"), edit_lang_magazine_article_path(loc.short,@magazine,article) %>
        <%end%>
    </td>
    <td><%= link_to image_tag("/images/delete_ico.gif",:alt=>"Удалить"), article, :confirm => 'Подтвердите удаление', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Добавить статью', new_magazine_article_path(@magazine.ident_name) %>
