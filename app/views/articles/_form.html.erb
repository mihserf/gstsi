<%= javascript_include_tag :fckeditor %>
<%= javascript_include_tag 'jquery.validate.min.js' %>
<%= javascript_include_tag 'validate_localization/messages_ru.js' %>
<%= javascript_include_tag 'own.validate.js' %>

Язык <%= Localedb.global.short %><br>
<%= error_messages_for :article %>
<% form_for([@magazine,@article], :html => { :multipart => true} ) do |f| %>
  
  <p>Источник "<%= @magazine.name %>"</p>

  <p>
    <%=ident_choice(@article)%>
  </p>
    
  <p>
    <%= f.label 'Название' %><br />
    <%= f.text_field :title, :class =>"required" %>
  </p>

  <p>
    <%= f.label 'Анонс' %><br />
    <%= f.text_area :short_text, :size => "100x3", :class => "required" %>
  </p>
  <p>
    <%= f.label 'Текст' %><br />
    <%= fckeditor_textarea(:article, :body, :toolbarSet => 'Simple', :width => '100%', :height => '300px', :class =>"required") %>
  </p>

  <p>
    <%= f.submit "Сохранить" %>
  </p>
<% end %>

